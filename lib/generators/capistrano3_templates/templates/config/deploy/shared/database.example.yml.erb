  encoding: utf8
  timeout: 5000
  reconnect: false
  port: 3306
  database: <%= "#{fetch(:application)}_#{fetch(:rails_env)}" %>
  pool: 10
  username: <%= "#{fetch(:application)}_#{fetch(:rails_env)}" %>
  password: 'your password'
  host:
  socket: /tmp/mysql.sock
